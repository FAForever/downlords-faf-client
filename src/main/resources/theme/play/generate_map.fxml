<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="generateMapRoot" hgap="10.0" styleClass="create-game-root"
          vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="com.faforever.client.game.GenerateMapController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
        <RowConstraints minHeight="10.0" vgrow="NEVER"/>
    </rowConstraints>
    <padding>
        <Insets left="20.0" right="20.0"/>
    </padding>
    <Label styleClass="h2" text="%game.generateMap.recreate" GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="3"/>
    <Label text="%game.generateMap.generatedName" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="previousMapName" maxHeight="Infinity"
               promptText="neroxis_map_generator_(version)_(seed)_(options)" style="-fx-pref-width: 5em"
               GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <tooltip>
            <Tooltip text="%game.generateMap.nameCaution"/>
        </tooltip>
    </TextField>
    <Separator GridPane.columnSpan="3" GridPane.rowIndex="2"/>
    <Label styleClass="h2" text="%game.generateMap.generateNew" GridPane.columnIndex="0" GridPane.rowIndex="3"
           GridPane.columnSpan="3"/>
    <Label text="%game.generateMap.generationType" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="generationTypeComboBox" maxHeight="Infinity" GridPane.columnIndex="1"
              GridPane.columnSpan="2" GridPane.rowIndex="4">
        <tooltip>
            <Tooltip text="%game.create.generationType"/>
        </tooltip>
    </ComboBox>
    <Label text="%game.create.spawnCount" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Spinner fx:id="spawnCountSpinner" maxHeight="Infinity" style="-fx-pref-width: 6.5em" GridPane.columnIndex="1"
             GridPane.columnSpan="2" GridPane.rowIndex="5">
        <tooltip>
            <Tooltip text="%game.create.spawnCount"/>
        </tooltip>
    </Spinner>
    <Label text="%game.create.mapSize" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Spinner fx:id="mapSizeSpinner" maxHeight="Infinity" style="-fx-pref-width: 6.5em" GridPane.columnIndex="1"
             GridPane.columnSpan="2" GridPane.rowIndex="6">
        <tooltip>
            <Tooltip text="%game.create.mapSize"/>
        </tooltip>
    </Spinner>
    <Label text="%game.generateMap.waterSlider" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <HBox fx:id="waterRandomBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1"
          GridPane.rowIndex="7">
        <Label text="%game.generateMap.random"/>
        <CheckBox fx:id="waterRandom"/>
    </HBox>
    <HBox fx:id="waterSliderBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="2"
          GridPane.rowIndex="7">
        <Label text="%game.generateMap.less"/>
        <Slider fx:id="waterSlider" max="127" majorTickUnit="1" snapToTicks="true" maxHeight="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Label text="%game.generateMap.more"/>
    </HBox>
    <Label text="%game.generateMap.plateauSlider" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <HBox fx:id="plateauRandomBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1"
          GridPane.rowIndex="8">
        <Label text="%game.generateMap.random"/>
        <CheckBox fx:id="plateauRandom"/>
    </HBox>
    <HBox fx:id="plateauSliderBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="2"
          GridPane.rowIndex="8">
        <Label text="%game.generateMap.less"/>
        <Slider fx:id="plateauSlider" max="127" majorTickUnit="1" snapToTicks="true" maxHeight="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Label text="%game.generateMap.more"/>
    </HBox>
    <Label text="%game.generateMap.mountainSlider" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <HBox fx:id="mountainRandomBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1"
          GridPane.rowIndex="9">
        <Label text="%game.generateMap.random"/>
        <CheckBox fx:id="mountainRandom"/>
    </HBox>
    <HBox fx:id="mountainSliderBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="2"
          GridPane.rowIndex="9">
        <Label text="%game.generateMap.less"/>
        <Slider fx:id="mountainSlider" max="127" majorTickUnit="1" snapToTicks="true" maxHeight="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Label text="%game.generateMap.more"/>
    </HBox>
    <Label text="%game.generateMap.rampSlider" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <HBox fx:id="rampRandomBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1"
          GridPane.rowIndex="10">
        <Label text="%game.generateMap.random"/>
        <CheckBox fx:id="rampRandom"/>
    </HBox>
    <HBox fx:id="rampSliderBox" alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="2"
          GridPane.rowIndex="10">
        <Label text="%game.generateMap.less"/>
        <Slider fx:id="rampSlider" max="127" majorTickUnit="1" snapToTicks="true" maxHeight="Infinity"
                HBox.hgrow="ALWAYS"/>
        <Label text="%game.generateMap.more"/>
    </HBox>


    <Button fx:id="generateMapButton" contentDisplay="RIGHT" defaultButton="true"
            mnemonicParsing="false" onAction="#onGenerateMapButtonClicked" styleClass="game-generate-map"
            text="%game.generateMap" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="11">
    </Button>

    <!-- Cancel, Ok -->
    <Button mnemonicParsing="false" onAction="#onCloseButtonClicked"
            styleClass="more-button-padding" text="%cancel" GridPane.columnIndex="0" GridPane.halignment="LEFT"
            GridPane.rowIndex="11">
    </Button>
</GridPane>
