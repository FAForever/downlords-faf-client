      alignment="CENTER" fillWidth="false">
    <children>
        <VBox>
            <children>
                <Label text="%chat.joinAChannel">
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </Label>
                <TextField fx:id="channelNameTextField" promptText="%chat.channelNamePrompt"/>
            </children>
        </VBox>
    </children>
</VBox>