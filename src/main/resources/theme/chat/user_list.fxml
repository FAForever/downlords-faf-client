<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      maxHeight="1.7976931348623157E308" minWidth="300.0" prefWidth="350.0"
      fx:controller="com.faforever.client.chat.test.ChatUserListController"
      SplitPane.resizableWithParent="false" styleClass="chat-channel-users-pane">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="filter-and-settings-content">
            <children>
                <ToggleButton fx:id="advancedFiltersToggleButton" mnemonicParsing="false" styleClass="filter-toggle-button"
                              onAction="#onAdvancedFiltersToggleButtonClicked">
                    <graphic>
                        <Region styleClass="icon,filter-icon,icon16x16"/>
                    </graphic>
                </ToggleButton>
                <TextField fx:id="searchUsernameTextField" maxWidth="1.7976931348623157E308" minWidth="10.0"
                           prefColumnCount="5" styleClass="filter-text-field" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" styleClass="user-list-settings-button" fx:id="listCustomizationButton"
                        onAction="#onListCustomizationButtonClicked">
                    <graphic>
                        <Region styleClass="icon,icon-settings,icon16x16"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <VBox fx:id="userListContainer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              prefWidth="433.0" VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
