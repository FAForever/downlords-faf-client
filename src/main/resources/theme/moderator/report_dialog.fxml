<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" spacing="20.0" styleClass="content"
      VBox.vgrow="ALWAYS" fx:id="reportDialogRoot"
      xmlns="http://javafx.com/javafx/8.0.141"
      fx:controller="com.faforever.client.moderator.ReportDialogController">
    <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </VBox.margin>
    <Label fx:id="userLabel"/>
    <TextField fx:id="reportDescription" promptText="%report.description"/>
    <TextField fx:id="game" promptText="%report.game.id"/>
    <TextField fx:id="timeCode" promptText="%report.game.timeCode"/>

    <HBox spacing="10">
        <Button fx:id="reportButton" onAction="#onReportButtonClicked" text="%chat.userContext.report"/>
        <Button fx:id="dismissButton" onAction="#dismiss" text="%dismiss" defaultButton="true"/>
    </HBox>
    <Label fx:id="successLabel" text="%report.success" visible="false"/>
    <Label fx:id="errorLabel" text="%report.fail" visible="false"/>
</VBox>
