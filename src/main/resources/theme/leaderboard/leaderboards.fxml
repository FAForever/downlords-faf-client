<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>

<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:id="leaderboardRoot"
         tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8.0.60"
         fx:controller="com.faforever.client.leaderboard.LeaderboardsController">
    <tabs>
        <Tab fx:id="ladder1v1LeaderboardTab" text="%leaderboard.ranked1v1">
            <fx:include fx:id="ladder1v1Leaderboard" source="leaderboard.fxml"/>
        </Tab>
        <Tab fx:id="globalLeaderboardTab" text="%leaderboard.global">
            <fx:include fx:id="globalLeaderboard" source="leaderboard.fxml"/>
        </Tab>
    </tabs>
</TabPane>
