<VBox fx:id="leaderboardRoot" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.faforever.client.leaderboard.LeaderboardController">
  <children>
    <VBox fx:id="contentPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                   <JFXTextField fx:id="searchTextField" maxWidth="1.7976931348623157E308" onAction="#handleSearchButtonClicked" prefHeight="25.0" prefWidth="189.0" promptText="%ladder.searchPrompt" HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="searchButton" onAction="#handleSearchButtonClicked" prefHeight="25.0" prefWidth="151.0" text="Search" wrapText="true">
                 <graphic>
                   <Label styleClass="icon" text="î¢¶" />
                 </graphic>
                  </JFXButton>
               </children>
            </HBox>
        <TableView fx:id="ratingTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" styleClass="big-scroll-bar" VBox.vgrow="ALWAYS">
          <columns>
            <TableColumn fx:id="rankColumn" text="Rank" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="meanColumn" text="Mean" visible="false" />
            <TableColumn fx:id="deviationColumn" text="Deviation" />
            <TableColumn fx:id="ratingColumn" text="Rating" />
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>
      </children>
        <padding>
            <Insets top="10.0" />
        </padding>
    </VBox>
    <VBox fx:id="connectionProgressPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
        <JFXSpinner prefHeight="80.0" prefWidth="80.0" />
        <Label text="%leaderboard.loading">
          <VBox.margin>
            <Insets />
          </VBox.margin>
        </Label>
      </children>
    </VBox>
      <Pagination fx:id="paginationControl" maxPageIndicatorCount="10" minHeight="-Infinity" minWidth="-Infinity" />
  </children>
</VBox>
