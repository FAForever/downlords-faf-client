<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="root" alignment="CENTER_LEFT" onContextMenuRequested="#openContextMenu"
      onMouseClicked="#openPrivateChatChannel" spacing="3.0" styleClass="player-card-content"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.faforever.client.game.PlayerCardController">
    <StackPane maxWidth="32.0" prefWidth="24.0">
        <ImageView fx:id="avatarImageView" fitHeight="20.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true"
                   visible="false"/>
    </StackPane>
    <Region fx:id="factionIcon" styleClass="icon" visible="false"/>
    <ImageView fx:id="factionImage" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true"
               visible="false"/>
    <Label fx:id="playerInfo" text="&lt;PlayerInfo&gt;" wrapText="true">
        <graphic>
            <ImageView fx:id="countryImageView" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                       preserveRatio="true"/>
        </graphic>
    </Label>
    <Label fx:id="foeIconText" minWidth="-Infinity">
        <graphic>
            <Region styleClass="icon,foe-icon"/>
        </graphic>
        <tooltip>
            <Tooltip text="%userInfo.foe"/>
        </tooltip>
        <HBox.margin>
            <Insets left="5.0"/>
        </HBox.margin>
    </Label>
    <Label fx:id="friendIconText" minWidth="-Infinity">
        <graphic>
            <Region styleClass="icon,friend-icon"/>
        </graphic>
        <tooltip>
            <Tooltip text="%userInfo.friend"/>
        </tooltip>
        <HBox.margin>
            <Insets left="5.0"/>
        </HBox.margin>
    </Label>
</HBox>
