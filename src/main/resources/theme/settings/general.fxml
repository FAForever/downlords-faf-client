<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="settings-content" xmlns="http://javafx.com/javafx/8.0.60"
      fx:controller="">
    <children>
        <TitledPane animated="false" collapsible="false" text="%settings.general">
            <content>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="%settings.general.language"/>
                        <ComboBox fx:id="languageComboBox" GridPane.columnIndex="1"/>
                        <Label text="%settings.general.theme" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="themeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <CheckBox fx:id="rememberLastTabCheckBox" mnemonicParsing="false"
                                  text="%settings.general.rememberLastTab" GridPane.rowIndex="2"/>
                        <Button fx:id="resetNotificationsButton" mnemonicParsing="false"
                                text="%settings.notifications.reset" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</VBox>
