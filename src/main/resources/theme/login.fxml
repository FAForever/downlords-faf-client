<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="loginRoot" maxHeight="1.7976931348623157E308"
      maxWidth="1.7976931348623157E308" styleClass="login-root" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.faforever.client.login.LoginController"
      alignment="CENTER">
    <children>
        <VBox fx:id="errorPane" alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0"/>
            </VBox.margin>
            <Label fx:id="loginErrorLabel" maxWidth="500"
                   minHeight="0.0" minWidth="0.0" styleClass="hint" VBox.vgrow="NEVER" alignment="CENTER"
                   text="This error message is supposed to be long enough to test text wrapping"
                   wrapText="true">
                <graphic>
                    <Region styleClass="icon,error-icon"/>
                </graphic>
                <VBox.margin>
                    <Insets bottom="5.0"/>
                </VBox.margin>
            </Label>
            <Button fx:id="downloadUpdateButton" maxWidth="500" minWidth="-Infinity"
                    onAction="#onDownloadUpdateButtonClicked" prefHeight="50.0" VBox.vgrow="NEVER"
                    text="%login.button.downloadUpdate" alignment="CENTER">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
        <VBox fx:id="loginProgressPane" alignment="CENTER" maxWidth="Infinity" VBox.vgrow="ALWAYS" visible="false">
            <VBox.margin>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0"/>
            </VBox.margin>
            <children>
                <ProgressIndicator prefHeight="80.0" prefWidth="80.0"/>
                <Label text="%login.progress.message">
                    <VBox.margin>
                        <Insets top="14.0"/>
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <VBox fx:id="loginFormPane" alignment="TOP_CENTER" maxHeight="Infinity" spacing="5.0"
              VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0"/>
            </VBox.margin>
            <children>
                <WebView fx:id="loginWebView" VBox.vgrow="ALWAYS" maxHeight="Infinity" maxWidth="800"/>
                <HBox maxWidth="500" alignment="CENTER" VBox.vgrow="NEVER" spacing="10.0">
                    <children>
                        <Label maxHeight="1.7976931348623157E308" minWidth="-Infinity"
                               text="%login.environment"
                               onMouseClicked="#onMouseClicked">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="environmentComboBox" maxWidth="1.7976931348623157E308"
                                  HBox.hgrow="ALWAYS"/>
                        <CheckBox fx:id="rememberMeCheckBox" text="%login.remember"/>
                    </children>
                </HBox>
                <GridPane fx:id="serverConfigPane" vgap="5.0" VBox.vgrow="SOMETIMES" maxWidth="500"
                          alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <TextField fx:id="serverHostField" promptText="%login.serverHost"/>
                        <TextField fx:id="serverPortField" prefColumnCount="6" promptText="%port"
                                   GridPane.columnIndex="1"/>
                        <TextField fx:id="replayServerHostField" layoutX="10.0" layoutY="7.0"
                                   promptText="%login.replayServerHost" GridPane.rowIndex="1"/>
                        <TextField fx:id="replayServerPortField" layoutX="310.0" layoutY="7.0"
                                   prefColumnCount="6" promptText="%port" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <TextField fx:id="apiBaseUrlField" prefColumnCount="6" promptText="%login.apiBaseUrl"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="3"/>
                        <TextField fx:id="oauthBaseUrlField" prefColumnCount="6"
                                   promptText="%login.oauthBaseUrl"
                                   GridPane.columnSpan="2147483647" GridPane.rowIndex="4"/>
                        <TextField fx:id="ircServerHostField" promptText="%login.ircServerHost"
                                   GridPane.rowIndex="2"/>
                        <TextField fx:id="ircServerPortField" promptText="%port" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</VBox>
